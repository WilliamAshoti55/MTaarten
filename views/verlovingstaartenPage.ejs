                            <label>Naam:</label>
                                    <%= verlovingstaart.verlovingstaartnaam %>
                                
                        </div>
                        <div class="caption">
                            <label>Aantalpersonen:</label>
                            <%= verlovingstaart.aantalpersonen %>
                        </div>
                        <div class="caption">
                            <label>Prijs:</label>
                            <h5>Op aanvraag. Bel: 0634700961</h5>
                        </div>

                </div>
                
                
                
            </div>
                <% }) %>
        </div>
    </div>
    <div id="partialsFooter">
        <%- include ('partials/footer.ejs'); -%>
        </div>
</html>





















